// dactyl_right.overlay

#include "dactyl.dtsi" // Notice that the main dtsi files are included in the overlay.

/ {
    chosen {
        zmk,kscan = &kscan;
    };
    kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";
        
        row-gpios
            = <&pro_micro 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row A from the schematic file
            , <&pro_micro 16 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row B from the schematic file
            , <&pro_micro 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row C from the schematic file
            , <&pro_micro 18 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row D from the schematic file
            , <&pro_micro 19 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row E from the schematic file
            ;
        col-gpios
            = <&pro_micro 6 GPIO_ACTIVE_HIGH> // col6 in the schematic
            , <&pro_micro 9 GPIO_ACTIVE_HIGH> // col5 in the schematic
            , <&pro_micro 10 GPIO_ACTIVE_HIGH> // col4 in the schematic
            , <&pro_micro 11 GPIO_ACTIVE_HIGH> // col3 in the schematic
            , <&pro_micro 12 GPIO_ACTIVE_HIGH>  // col2 in the schematic
            , <&pro_micro 13 GPIO_ACTIVE_HIGH>  // col1 in the schematic
            ;
    };
};